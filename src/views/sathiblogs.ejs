                                                <p class="card-header font-weight-bold text-center text-primary bg-success"><%= title[i] %></p>
                                            <div class="image-card w-100 d-flex justify-content-center">
                                                <img class="w-100" style="height: 320px;" src="data:image/jpeg;base64,<%= images[i] %>" alt="">
                                            </div>
                                        </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
            </div>
            <div class="tab-pane fade" id="suicideprevention">
                    <div class="row mx-2 mt-3 d-flex justify-content-center">
                        <% for(let i = 0; i< topics.length; i++){ %>
                            <% if(topics[i] == 'Suicide Prevention') { %>
                                <div class="col-md-5 mx-3">
                                    <div class="d-flex justify-content-center">
                                        <div class="card mb-3">
                                                <a href="/blogs/<%= title[i] %>/?id=<%= id[i] %>">
                                            <p class="card-header font-weight-bold text-center text-primary bg-success"><%= title[i] %></p>
                                            <div class="image-card w-100 d-flex justify-content-center">
                                                <img class="w-100" style="height: 320px;" src="data:image/jpeg;base64,<%= images[i] %>" alt="">
                                            </div>
                                        </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
            </div>
          </div>
    </div>

<%- include("partials/footer.ejs") %>